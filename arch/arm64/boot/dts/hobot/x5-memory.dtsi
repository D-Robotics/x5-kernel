#include "x5.dtsi"

/ {
	memory@87000000 {
		device_type = "memory";
		reg = <0x0 0x84000000 0x0 0x7C000000>;
		/* Expect Bootloader to properly configure total memory size */
	};

	reserved-memory {
		#address-cells = <2>;
		#size-cells = <2>;
		ranges;

		/* dtb 2M 0x87FDC000---0x87FFC000*/
		/* uboot log 16k 0x87FFC000---0x88000000*/
		uboot_log_reserved: log@87FFC000 {
			compatible = "uboot_log";
			reg = <0x0 0x87FFC000 0x0 0x00004000>;  /* 16K */
			status = "okay";
		};

		linux,cma@88000000 {
			compatible = "shared-dma-pool";
			reg = <0x0 0x88000000 0x0 0x07E00000>; /* 126MB */
			reusable;
			linux,cma-default;
		};

		adsp_ddr: adsp_ddr@8FE80000 {
			reg = <0x0 0x8FE80000 0x0 0x02200000>;
			no-map;
		};

		audio_reserved: audio@92080000 {
			compatible = "shared-dma-pool";
			no-map;
			reg = <0x0 0x92080000 0x0 0x01000000>;
			status = "okay";
		};

		adsp_ipc_reserved: audio@93080000 {
			compatible = "shared-dma-pool";
			no-map;
			reg = <0x0 0x93080000 0x0 0x00800000>;
			status = "okay";
		};

		adsp_bsp_reserved: audio@93880000 {
			compatible = "shared-dma-pool";
			no-map;
			reg = <0x0 0x93880000 0x0 0x00800000>;
			status = "okay";
		};

		ramoops@94080000 {
			compatible = "ramoops";
			reg = <0x0 0x94080000 0x0 0x00040000>;
			console-size = <0x8000>;
			pmg-size = <0x8000>;
			ftrace-size = <0x8000>;
			sched-size  = <0x8000>;
			record-size = <0x4000>;
			ecc-size = <0x0>;
		};

		ion_reserved: ion_reserved@940C0000 {
			compatible = "ion-pool";
			reg = <0x0 0x940C0000 0x0 0x20000000>; /* 512MB */
			status = "okay";
		};

		ion_carveout: ion_carveout@B40C0000 {
			compatible = "ion-carveout";
			reg = <0x0 0xB40C0000 0x0 0x20000000>; /* 512MB */
			status = "okay";
		};

		ion_cma: ion_cma {
			compatible = "ion-cma";
			alignment = <0x0 0x2000>;
			reusable;
			reg = <0x0 0xD40C0000 0x0 0x18000000>; /* 384MB */
			status = "okay";
		};
		/* The remaining memory is used as kernel heaps,
		 * please reserve with CAUTION!
		 */
	};
};
